<!DOCTYPE html>
<html>
    <% include partials/head %>
    
    <body id="gathering-body">
        <% include partials/header %>
        <h1><%=gatheringName %></h1>
        <img id="defaultGathering" src="/images/DefaultGathering.jpg" height = "150"/> 
        <p>Host : <%=host %></p>
		<p>Key : <%=key %></p>
        <div class="error"></div>
		
		<p>Next Song:</p>
		<div><%=nextSong.title %> by <%=nextSong.artists %></div>
        
        <div id="queuedSongs">
            <h3>Queued Songs</h3>
            <ol>
			<% for(var i=0; i<queuedSongs.length; i++) {%>
			   <li><%= queuedSongs[i].title %> by <%= queuedSongs[i].artists %></li>
			<% } %>
			</ol>
        </div>
    
           <% if(songIds==="None"){ %>
               <script>
                    location.reload();
                </script>
             <% } else{ %>  
                <iframe src="https://embed.spotify.com/?uri=spotify:trackset:WeTube:<%=songIds%>" width="300" height="80" frameborder="0" allowtransparency="true"></iframe>            
        <% } %>
		
        <button id="members-btn">View Members</button><br>
		
		<%if (currentUser === host) { %>
			<button id="end-gathering-btn">End My Gathering</button><br>
		<% } %>
        
    </body>
</html>
