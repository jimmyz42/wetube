<!DOCTYPE html>
<html>
<div id="content-box">
      <div align = "center">

   <% include partials/head %>
   <body>
      <% include partials/header %>
      <h1><%=currentUser %>'s profile</h1>
<!--
      <img id="defaultProfile" src="/images/DefaultProfile.png" height = "180"/> 
-->
    <div class="profile">
      <img class="profile" src="/images/user/<%=currentUser%>.jpg">
      <div class="outer">
        <span class="profile">Change Picture</span>
      </div>
    </div>
    <form action="/upload" method="post" enctype="multipart/form-data">
      <input type="file" name="file">
      <input type="submit" name="submit" value="Upload!">
    </form>
      <div class="error"></div>
    <div id="searchModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">      
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">X</button>
            <h2>Search Results</h2> 
          </div>
          <div class="modal-body">
            <div id="search-results"></div>
          </div>
          <div class="modal-footer">
            <!-- we can put something here if we want -->
          </div>
        </div>
      </div>
    </div>
       <div class="content-box">
        <table id="searchtable">
            <tr>
            <td>
                <p>Add a Favorite Song!</p>
                <div> Title : <input type="text" id="search-song-input"> </div>
                <br>
                <div> <button id="search-song-btn" class="btn btn-default">Search for Song</button></div>
            </td>
            <td>
                <p>Add a Favorite Artist!</p>
                <div> Name : <input type="text" id="search-artist-input"> </div>
                <br>
                <div> <button id="search-artist-btn" class="btn btn-default">Search for Artist</button></div>
            </td>
          </tr>
<!--
            <tr>
                <td><div id="search-results"></div></td>
                </tr>
-->
          <tr>
              <td><h3>My Songs</h3>
              </td>
              <td><h3>My Artists</h3>
              </td>
          </tr>
         <tr>
            <td>
               <div id="mySongs">
                  <% if(songs.length > 0){ %>
                  <ol>
                     <% for(var i=0; i<songs.length; i++) {%>
                     <li data-id="<%=songs[i].id%>">
                        <div class="liked" data-id="<%=songs[i].id%>">
                        <image class="artistImage" src=<%=songs[i].albumArtUrl%>></image>
                        <button class="remove-song btn btn-default" id="remove-<%=songs[i].id%>">Remove</button>

                        <%= songs[i].title%> by <%= songs[i].artists %>
                         </div>
                     </li>
                     <br>
                     <% } %>
                  </ol>
                  <% } else{ %>  
                  <h3>No liked songs yet!</h3>
                  <% } %>
               </div>
            </td>
            <td>
               <div id="myArtists">
                  <% if(artists.length > 0){ %>
                  <ol>
                     <% for(var i=0; i<artists.length; i++) {%>
                     <li>
                     <div class="liked" data-id="<%=artists[i].id%>">
                         <image class="artistImage" src=<%=artists[i].imageUrl%>></image>
                      <button class="remove-artist btn btn-default" id="remove-<%=artists[i].id%>">Remove</button>
                        <%= artists[i].name %> 
                    </div>
                     </li>
                     <br>
                     <% } %>
                  </ol>
                  <% } else{ %>  
                  <h3>No liked artists yet!</h3>
                  <% } %>
               </div>
            </td>
         </tr>
      </table>
     <div> <button class="btn btn-default" id="back-main-btn">Back to Main Page</button></div>
       </div>
   </body>
 </div>
</html>
